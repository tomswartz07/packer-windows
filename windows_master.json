      "iso_checksum": "f9ac831f06a760c722df0df34f1b9397",
      "headless": true,
      "boot_wait": "2m",
      "ssh_username": "admin",
      "ssh_password": "admin",
      "ssh_wait_timeout": "8h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer build complete.\"",
      "guest_os_type": "Windows81_64",
      "vm_name": "Win81Packer",
      "disk_size": 61440,
      "floppy_files": [
        "./answer_files/81/Autounattend.xml",
        "./answer_files/81/unattendSysprep.xml",
        "./scripts/openssh.ps1",
        "./scripts/windowsApps.ps1",
        "./scripts/microsoft-updates.bat",
        "./scripts/dis-updates.ps1",
        "./scripts/win-updates.ps1",
        "./scripts/oracle-cert.cer"
      ],
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "8192"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "4"
        ]
      ]
    },
    {
      "type": "virtualbox-iso",
      "name": "Windows 10",
      "iso_urls": [
        "http://it.pennmanor.net/Windows10ver1511.iso",
        "./iso/Windows 10 ver. 1511.iso"
      ],
      "iso_checksum_type": "md5",
      "iso_checksum": "30d5846cce90f6bf728245d696e1b73f",
      "output_directory": "output-virtualbox-iso-win10",
      "headless": true,
      "boot_wait": "2m",
      "ssh_username": "admin",
      "ssh_password": "admin",
      "ssh_wait_timeout": "8h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer build complete.\"",
      "guest_os_type": "Windows10_64",
      "vm_name": "Win10Packer",
      "guest_additions_mode": "disable",
      "disk_size": 61440,
      "floppy_files": [
        "./answer_files/10/Autounattend.xml",
        "./answer_files/10/unattendSysprep.xml",
        "./scripts/*"
      ],
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "2048"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "4"
        ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "remote_path": "/tmp/script.bat",
      "execute_command": "{{.Vars}} cmd /c C:/Windows/Temp/script.bat",
      "only": ["Windows 10"],
      "scripts": [
        "./scripts/fixwin10.bat"
      ]
    },
    {
      "type": "windows-restart",
      "restart_timeout": "1h",
      "pause_before": "2m"
    },
    {
      "type": "shell",
      "remote_path": "/tmp/script.bat",
      "execute_command": "{{.Vars}} cmd /c C:/Windows/Temp/script.bat",
      "scripts": [
        "./scripts/pennmanorAD.bat"
      ],
      "pause_before": "5m"
    },
    {
      "type": "windows-restart",
      "restart_timeout": "1h",
      "pause_before": "5m"
    },
    {
      "type": "shell",
      "remote_path": "/tmp/script.bat",
      "execute_command": "{{.Vars}} cmd /c C:/Windows/Temp/script.bat",
      "scripts": [
        "./scripts/updates.bat"
      ],
      "pause_before": "5m"
    },
    {
      "type": "windows-restart",
      "restart_timeout": "1h"
    },
    {
      "type": "powershell",
      "remote_path": "/tmp/powershell.ps1",
      "scripts": [
        "./scripts/windows10apps.ps1"
      ],
      "pause_before": "2m",
      "only": ["Windows 10"]
    },
    {
      "type": "shell",
      "remote_path": "/tmp/script.bat",
      "execute_command": "{{.Vars}} cmd /c C:/Windows/Temp/script.bat",
      "scripts": [
        "./scripts/disable-auto-logon.bat",
        "./scripts/enable-rdp.bat",
        "./scripts/compile-dotnet-assemblies.bat",
        "./scripts/compact.bat",
        "./scripts/sysprep.bat"
      ],
      "pause_before": "5m"
    }
  ],
  "post-processors": [
    {
      "type": "compress",
      "output": "windows_7.tar.gz",
      "only": ["Windows 7"]
    },
    {
      "type": "compress",
      "output": "windows_81.tar.gz",
      "only": ["Windows 81"]
    },
    {
      "type": "compress",
      "output": "windows_10.tar.gz",
      "only": ["Windows 10"]
    }
  ]
